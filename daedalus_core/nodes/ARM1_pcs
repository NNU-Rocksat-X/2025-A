class Simulation_SM:
    def __init__(self):

        # Create a SMACH state machine
        self.sm = smach.StateMachine(outcomes=["Mission_Success", "Mission_Fail"])

        self.mission_sm()
        

    
    def mission_sm(self):
        with self.sm:

            #example states
            
            #smach.StateMachine.add('Init_Arm_sync', ARM_Sync('init', timeout=60),
             #   transitions={'Ready': 'Check_For_Inhibit',
