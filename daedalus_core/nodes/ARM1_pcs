            smach.StateMachine.add('Launch_Ball_1', Ember_High_State(),
                                    transitions={'Done': 'Wait_till_ball_out_1'})
                            
            smach.StateMachine.add('Wait_till_ball_out_1', Wait_State(0.5),
                                    transitions={'Complete': 'Attempt_Catch_1'})
# Attempt First Catch       TODO ADD POSITION INFO FOR CATCH
            smach.StateMachine.add('Attempt_Catch_1', attempt_catch,
                                     transitions={'Success': 'Release_Ball_1',
                                                  'Fail': 'Release_Ball_1'})   
# Release caught ball       TODO ADD POSITION INFO FOR RELEASE
            smach.StateMachine.add('Release_Ball_1', release_catch,
                                     transitions={'Success': 'Home_Pos_2',
                                                  'Fail': 'ReFold'})

# -----------------------------------  BALL 2  -------------------------------------- 
# Set arm at Home Position  TODO ADD HOME POSITION STATE AND POSITION INFO
            smach.StateMachine.add('Home_Pos_2', home_pos_1_SM_ARM1, 
