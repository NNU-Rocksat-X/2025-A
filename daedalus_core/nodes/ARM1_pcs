            smach.StateMachine.add('Wait_till_ball_out_2', Wait_State(0.5),
                                    transitions={'Complete': 'Attempt_Catch_2'})
# Attempt First Catch       TODO ADD POSITION INFO FOR CATCH
            smach.StateMachine.add('Attempt_Catch_2', attempt_catch,
                                     transitions={'Success': 'Release_Ball_2',
                                                  'Fail': 'ReFold'})   
# Release caught ball       TODO ADD POSITION INFO FOR RELEASE
            smach.StateMachine.add('Release_Ball_2', release_catch,
                                     transitions={'Success': 'ReFold',
                                                  'Fail': 'ReFold'})
            

# Refold Arm
            smach.StateMachine.add('ReFold', Fold_ARM_SM, 
